@model ExpenseTracker.Web.Models.ExpenseGroupViewModel
    @using System.Linq;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            User ID
        </th>
        <th>
          Title
        </th>
        <th>
            Description
        </th>
        <th>
            Status
           
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ExpenseGroup) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            
            @(Model.ExpenseGroupStatuses.First(egs => egs.Id == item.ExpenseGroupStatusId).Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
